        <MudElement HtmlTag="a" href="/dashboard" Class="appbar-brand"> 
            <MudAvatar Color="Color.Primary" Rounded="true" Class="appbar-brand-icon pa-2 rounded-circle" Style="@($"background: linear-gradient(90deg,#5B63D2 0%, #424AB1 100%);")">
                <MudImage ObjectFit="ObjectFit.Contain" Src="img/iconwhite.png" Alt="" />
