<MudAppBar Elevation="0" Color="Color.Default" Class="appbar-header">
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudIconButton class="appbar-menu" Icon="bi bi-list" Size="Size.Small" Edge="Edge.End" Color="Color.Inherit" OnClick="@((e) => _drawerOpen = !_drawerOpen)" />
    </MudHidden>
    <SectionOutlet SectionName="PageHeadingTitle" />
    <MudSpacer />
    
    <MudElement HtmlTag="div" Class="searchbox ">
        <MudTextField Class="rounded-pill" @bind-Value="value" Variant="MudBlazor.Variant.Outlined" Margin="Margin.Dense" Placeholder="Search here" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Outlined.Search" InnerPadding="false"></MudTextField>
    </MudElement> 
    <MudElement HtmlTag="div" Class="appbar-right px-0">
        <MudIconButton DisableElevation="true" Variant="MudBlazor.Variant.Text" Icon="@Icons.Material.TwoTone.Notifications" Color="Color.Inherit"></MudIconButton>
        <MudToggleIconButton  Variant="MudBlazor.Variant.Text" Icon="@Icons.Material.TwoTone.LightMode" Color="Color.Inherit" Toggled="@IsDarkMode"
        ToggledChanged="SetDarkTheme" 
        ToggledIcon="@Icons.Material.TwoTone.DarkMode" ToggledColor="Color.Inherit" />
 

        <MudMenu class="account-user" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" LockScroll='false' FullWidth="false" DropShadow="true" PopoverClass="appbar-dropdown">
            <ActivatorContent>
                <MudAvatar Color="Color.Secondary" Rounded="true"><MudText Typo="Typo.body1">DK</MudText></MudAvatar>
                <MudElement HtmlTag="div" Class="account-user-inner">
                    <MudText Typo="Typo.caption" class="account-subtitle">Welcome</MudText>
                    <MudText Typo="Typo.subtitle2" class="account-title">Dominic Keller</MudText>
                </MudElement>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Icon="@Icons.Material.Outlined.Person">Profile</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Outlined.AccountBox">Account</MudMenuItem>
                <MudDivider />
                <MudMenuItem Icon="@Icons.Material.Outlined.Logout" Href="/Login">Logout</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudElement>
</MudAppBar>
<MudDrawer Color="Color.Default" @bind-Open="_drawerOpen" Elevation="0" Breakpoint="Breakpoint.Md" Variant="DrawerVariant.Mini" ClipMode="DrawerClipMode.Never" Class="aside-menu">
    <MudDrawerHeader>
        <MudElement HtmlTag="div" Class="drawer-brand">
            
            <MudAvatar Color="Color.Primary" Rounded="true" Class="appbar-icon pa-2">
                <MudImage ObjectFit="ObjectFit.Contain" Src="img/iconwhite.png" Alt="" />
            </MudAvatar>
            <MudDivider Vertical="true" FlexItem="true" /> 
            <MudText Typo="Typo.h6" class="drawer-brand-text">EZR Digital <br/>Layouts</MudText>
        </MudElement>
    </MudDrawerHeader>
    <MudDrawerContainer Class="mud-drawer-body">
    <VerticalNavMenu />
    </MudDrawerContainer>
</MudDrawer>
 
@code { 

@* -----MODE----- *@    
[Parameter]
public bool IsDarkMode { get; set; }

[Parameter]
public EventCallback<bool> IsDarkModeChanged { get; set; }

private async Task SetDarkTheme(bool value)
{
    IsDarkMode = value;
    await IsDarkModeChanged.InvokeAsync(value);
}

[Parameter]
public EventCallback OnToggleSettingsDrawer { get; set; }


@* -----DRAWER----- *@
bool _drawerOpen = false;
void DrawerToggle() { 
    _drawerOpen = !_drawerOpen;  
}


string value = null;


}